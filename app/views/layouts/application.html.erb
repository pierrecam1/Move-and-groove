<!DOCTYPE html>
<html>
  <head>
    <title>Mooveandgroove</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
      <%= render 'layouts/navigation'%>
      <% if notice.present?%>
      <p class="mb-0 alert-success alert-dismissible fade show text-center p-2 fade-out" role="alert"><%= notice %></p>
      <% end %>
      <% if alert.present?%>
      <p class="mb-0 alert-success alert-dismissible fade show text-center p-2 fade-out" role="alert"><%= alert %></p>
      <% end %>
      
    <%= yield %>

  <!-- <%= debug user_signed_in? %>
    <%= debug session.to_hash %> --> 

   <%= render 'layouts/footer'%>
   <%= javascript_pack_tag 'custom' %>
  </body>
</html>
