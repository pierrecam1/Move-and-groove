<header class="home-header form-header position-relative">
  <div class="container py-5">
    <div class="card p-3 col-sm-12 col-md-10 col-lg-6 col-xl-4 mx-auto shadow">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class=> "btn btn-primary f-trump mt-3 mr-4 btn-style" %>
  </div>
  <hr>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</header>