<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Activity</th>
      <th>Distance</th>
      <th>Duration</th>
      <th>Elevation</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <td><%= post.user.username %></td>
      <td><%= post.user.avatar %></td>
        <td><%= post.title %></td>
        <td><%= post.date %></td>
        <td><%= post.activity %></td>
        <td><%= post.distance %></td>
        <td><%= post.duration %></td>
        <td><%= post.elevation %></td>
        
                <td><%= image_tag post.picture.url(:thumb) %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
